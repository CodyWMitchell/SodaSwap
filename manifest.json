{
"manifest_version": 2,
    "name": "LocalBubble",
    "description": "Replaces the name of carbonated beverages within your webpage",
    "version": "1.0",
    "permissions": [
	"storage"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://*/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_end"
        }
    ],
    "options_page": "options.html"
}
